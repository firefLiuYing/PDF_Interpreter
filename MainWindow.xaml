<Window x:Class="PDF_Interpreter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="1600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 输入路径 -->
        <TextBox x:Name="InputPathTextBox" Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="162,194,874,474" TextChanged="PathTextBox_TextChanged" />

        <!-- 按钮用于选择输入路径 -->
        <Button Content="选择输入路径"  Margin="271,335,983,383" Click="Input_Path_Choose_Click"/>

        <!-- 输出路径 -->
        <TextBox x:Name="OutputPathTextBox" Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="871,194,165,474" TextChanged="PathTextBox_TextChanged" />
        
        <!-- 按钮用于选择输入路径 -->
        <Button Content="选择输出路径"  Margin="980,335,274,383" Click="Output_Path_Choose_Click"/>

        <!-- 按钮用于确定路径并进行转换 -->
        <Button Content="开始转换"  Margin="734,470,734,247" Click="Convert_Click"/>

        <!-- 调试文字提取的窗口 -->
        <TextBox x:Name="TestTextBox" Grid.Row="0"  TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="522,584,522,48" TextChanged="PathTextBox_TextChanged" />

    </Grid>
</Window>
    
